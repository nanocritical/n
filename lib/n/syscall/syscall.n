	let raw:[]U8 such
		raw#Unsafe_wrap ((unsafe.Cast *I32 *U8) *value) (sizeof value) (sizeof value)
	let ret = setsockopt sockfd.Trim_i32 level opt raw.Unsafe_rawdata raw.Bytecount
	if ret == 0
		return OK
	return convert_error errno

