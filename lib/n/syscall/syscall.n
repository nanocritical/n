fun Getsockopt_i32 sockfd:Int level:I32 opt:I32 = Error, value:I32
	var raw:[!]U8
	raw#Unsafe_wrap ((unsafe.Cast #I32 #U8) #value) (sizeof value) (sizeof value)
	var cnt = raw.Bytecount
	let ret = getsockopt sockfd.Trim_i32 level opt raw#Unsafe_rawdata #cnt
	if cnt != raw.Bytecount
		return INVAL, 0
	if ret == 0
		return OK, value
	return convert_error errno, 0

